@model tiyatroff.Models.Gosterim

@{
    ViewData["Title"] = "Details";
}

<h1>Detaylar</h1>

<div>
    <h4>Gosterim</h4>
    <hr />
    <dl class="row">
        
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Oyun.OyunAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Oyun.OyunAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Oyun.OyunFoto)
        </dt>
        <dd class = "col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Oyun.OyunFoto))
            {
                <img src="@Url.Content(Model.Oyun.OyunFoto)" alt="Oyun Resmi" style="max-width: 200px; max-height: 150px;" /> 
            }
            else
            {
                <span>Resim Yok</span>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.SalonAd)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salon.SalonAd)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Salon.SalonAdres)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Salon.SalonAdres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fiyat)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fiyat)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Tarih)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Tarih)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GosterimId">Düzenle</a> |
    <a asp-action="Index">Geri</a>
</div>