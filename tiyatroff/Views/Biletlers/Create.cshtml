                <label asp-for="GosterimId" class="control-label"></label>
                <select asp-for="GosterimId" class ="form-control" asp-items="ViewBag.GosterimId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Satistarih" class="control-label"></label>
                <input asp-for="Satistarih" class="form-control" />
