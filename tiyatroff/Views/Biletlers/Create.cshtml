    ViewData["Title"] = "Create";
}

<h1>Ekle</h1>

<h4>Biletler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BiletId" class="control-label"></label>
                <input asp-for="BiletId" class="form-control" />
